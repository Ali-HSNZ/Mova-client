{
    // vscode general
    "scm.diffDecorationsIgnoreTrimWhitespace": "true",
    "files.trimTrailingWhitespace": true,

    "workbench.colorCustomizations": {
        "tree.indentGuidesStroke": "#fff" //? Line Color
    },
    "workbench.tree.renderIndentGuides": "always",
    "workbench.tree.indent": 25, //? Tab width
    "editor.mouseWheelZoom": true, //? Enable Zoom with mouse scroll - Default is False

    // eslint extension options
    "eslint.enable": true,
    "eslint.validate": ["javascript", "typescript", "javascriptreact", "typescriptreact"],

    // prettier extension setting
    "editor.formatOnSave": true,
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "prettier.configPath": ".prettierrc.json",
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },

    // json formatter
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    "cSpell.language": "en,fa",

    "cSpell.words": ["esbenp", "Gantt", "Highcharts", "Kanban", "mantine", "Roboto"]
}
